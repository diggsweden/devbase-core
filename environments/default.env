#!/usr/bin/env bash
# Default Environment Configuration Template
# Copy this file to default.env and modify as needed
# For organization-specific config, use devbase-custom-config/config/org.env
#
# IMPORTANT: Do NOT set these core path variables here (they are readonly):
#   DEVBASE_ROOT, DEVBASE_LIBS, DEVBASE_DOT, DEVBASE_FILES, DEVBASE_ENVS, DEVBASE_DOCS
# These are set by setup.sh and cannot be overridden.

# Locale Configuration (OPTIONAL)
# Set this to install a specific locale on the host OS
# Example: DEVBASE_LOCALE="sv_SE.UTF-8" for Swedish
# DEVBASE_LOCALE=""

# Email Domain Configuration (OPTIONAL)
# Set this to pre-fill email domain for Git configuration
# Example: DEVBASE_EMAIL_DOMAIN="@company.com"
# Default: "@" (no prefill)
DEVBASE_EMAIL_DOMAIN="@"

# SSH Key Passphrase Configuration (OPTIONAL)
# Allow empty SSH key passphrases (not recommended for security)
# Set to "true" to allow keys without passphrase
# Default: false (require min 6 character passphrase)
# DEVBASE_SSH_ALLOW_EMPTY_PW="false"



# Proxy Configuration (OPTIONAL)
# Set URL if behind corporate proxy (empty = disabled)
# DEVBASE_PROXY_URL="http://proxy.company.com:8080"
# DEVBASE_NO_PROXY_DOMAINS="*.company.com,*.internal"

# Container Registry (OPTIONAL)
# Set URL if using internal registry (empty = disabled)
# DEVBASE_REGISTRY_URL="https://registry.company.com"

# Organization Domain (OPTIONAL)
# Used for automatic NO_PROXY configuration
# DEVBASE_DOMAIN="company.com"

# User Preferences (OPTIONAL)
# Set these to skip interactive prompts
# DEVBASE_GIT_AUTHOR="Your Name"
# DEVBASE_GIT_EMAIL="your.email@company.com"
# DEVBASE_SSH_KEY_ACTION="keep"  # or "new" to generate new key
# DEVBASE_THEME="everforest-dark"  # or "everforest-light"

# Locale Configuration (OPTIONAL)
# Default is en_US.UTF-8 if not set
# Common values: en_US.UTF-8, sv_SE.UTF-8 (Swedish), en_GB.UTF-8 (British)
export LANG="en_US.UTF-8"
# LC_ALL="en_US.UTF-8"

# REQUIRED - User ID (usually auto-detected)
export USER_UID=$(id -u)